<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary Color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Primary Color Variant -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <!-- On Primary Color -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary Color -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <!-- Secondary Color Variant -->
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <!-- On Secondary Color -->
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />

    <!-- Splash Screen -->
    <style name="Theme.NewsApp.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_new</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NewsApp</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />

    <!-- Bottom Navigation -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView">
        <item name="indicatorColor">@color/yellow</item>
    </style>
</resources>